{% include 'Common/View/header.twig' %}
{% block bodyClass %}
    <body class="top-wave">
    {% endblock %}
    <section class="container">
        <img class="post-page__img" src="/img/18707.jpg" alt="post image">
        <article class="u-margin--medium">
            <div class="post-page__header clearfix">
                <h1 class="post-description__title">{{ post.title }}</h1>
                <span class="post-description__date">{{ post.date }}</span>
            </div>
            <p>{{ post.content|raw }}</p>
            <div class="u-margin--medium clearfix">
                <a class="read-previous-button post-page-end__button--previous clearfix" href="/blog/{{ post.id }}">
                    <img src="/img/icon-back.svg">
                    <span>poprzedni artykuł</span>
                </a>
                <div class="post-page__author-info clearfix">
                    <img class="author-box__img" src="/img/code.svg" alt="Aleksandra Rolka">
                    <div class="author-box__description">
                        <p class="author-title">Autor:</p>
                        <p class="author-info--name">{{ post.author_forename }}
                            {{ post.author_surname }}</p>
                        <p class="author-info--position">Front-end Developer</p>
                    </div>
                </div>
                <a class="read-more-button post-page-end__button--next clearfix" href="/blog/{{ post.id }}">
                    <span>następny artykuł</span>
                    <img class="move-forward-icon" src="/img/icon-back.svg">
                </a>
            </div>
        </article>
    </section>
    {% include 'Common/View/footer.twig' %}
</body>